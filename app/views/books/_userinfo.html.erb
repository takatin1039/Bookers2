  
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %>
<table class="table">
  <tbody>
    <tr>
        <th>name</th>
        <th><%= user.name %></th>
    </tr>
    <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
 <%= link_to edit_user_path(current_user) do %>
 <i class="col-xs-12 btn btb-default glyphicon-wrench edit_user_6144"></i>
 <% end %>
</div>

<h2>New book</h2>

<%= form_for(book) do |f| %>
  <%#= render 'devise/shared/error_messages', model: f.object %>
  <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title"%>
  </div>
  <div class="field row">
    <h4>Opinion</h4>

    <%= f.text_area :body, class: "col-xs-12 book_body" %>
    <br>
  </div>
  <div class="actions row">
      <%= f.submit 'Create Book',class: "btn btn-primary col-xs-12"%>
     <br>
  </div>
<% end %>